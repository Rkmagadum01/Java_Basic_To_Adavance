package Producer_Consumer;

public class Producer extends Thread{
    company c;
    
    Producer(company c)
    {
    	this.c=c;
    }
    
	@Override
	public void run() {
		int i=1;
		while(true)
		{
			this.c.Produced_item(i);
			try {
				Thread.sleep(1000);
			}catch(Exception e) {
				
			}
		}
	}
}
